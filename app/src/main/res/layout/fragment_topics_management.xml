<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titel -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Themen Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Filter Bereich -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nach Status filtern:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/filter_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp" />

    <!-- Themen Liste -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meine Themen:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/topics_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Hinweis -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ℹ️ Kurzer Klick: Bearbeiten | Langer Klick: Löschen"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Add Topic Button -->
    <Button
        android:id="@+id/add_topic_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:text="Neues Thema erstellen"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50" />

</LinearLayout>