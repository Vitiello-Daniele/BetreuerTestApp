<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thema bearbeiten"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Thema Titel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titel *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/title_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:hint="Titel der Abschlussarbeit"
            android:layout_marginBottom="16dp" />

        <!-- Fachbereich -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fachbereich *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/area_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/status_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Beschreibung -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beschreibung *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:minHeight="120dp"
            android:hint="Detaillierte Beschreibung des Themas..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp" />

        <!-- Anforderungen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anforderungen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/requirements_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:minHeight="100dp"
            android:hint="Voraussetzungen und benötigte Skills..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp" />

        <!-- Update Button -->
        <Button
            android:id="@+id/update_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Änderungen speichern"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="8dp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Thema löschen"
            android:textSize="16sp"
            android:backgroundTint="#F44336"
            android:layout_marginBottom="8dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Abbrechen"
            android:textSize="16sp" />

        <!-- Hinweis -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Pflichtfelder"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>