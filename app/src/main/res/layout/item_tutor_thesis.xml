<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Status oben, Farbe kommt aus Adapter -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angenommen"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Titel der Arbeit -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Betreute Arbeit"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Subtitle: Student + Fachgebiet -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Student: Max Mustermann • Fachgebiet: Wirtschaftsinformatik"
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Zweitprüfer -->
        <TextView
            android:id="@+id/tv_second_reviewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Zweitprüfer: noch nicht zugewiesen"
            android:textSize="12sp"
            android:textColor="#666666" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
