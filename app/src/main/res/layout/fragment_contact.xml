<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titel -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontaktformular"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ihr Name *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:hint="Max Mustermann"
            android:layout_marginBottom="16dp" />

        <!-- E-Mail -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ihre E-Mail *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:hint="max.mustermann@iu.de"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp" />

        <!-- Nachricht -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ihre Nachricht *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:minHeight="150dp"
            android:hint="Beschreiben Sie hier Ihr Anliegen..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp" />

        <!-- Senden Button -->
        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Nachricht senden"
            android:textSize="16sp" />

        <!-- Exposé Upload Button -->
        <Button
            android:id="@+id/upload_expose_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:text="Exposé hochladen"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50" />

        <!-- Hinweis -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Pflichtfelder"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>