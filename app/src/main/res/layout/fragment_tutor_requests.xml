<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FB">

    <!-- Header-Bar: ORANGE, weiÃŸe Schrift -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF9800"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anfragen"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Inhalt -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Filterchips (wie beim Student-Dashboard) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Vollbreite: Alle (N) -->
            <TextView
                android:id="@+id/chip_filter_all"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Alle (0)"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@drawable/bg_filter_chip_active" />

            <!-- Reihe mit 3 Chips -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/chip_filter_open"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Offen (0)"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_filter_chip_inactive" />

                <TextView
                    android:id="@+id/chip_filter_accepted"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Angenommen (0)"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_filter_chip_inactive" />

                <TextView
                    android:id="@+id/chip_filter_rejected"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Abgelehnt (0)"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_filter_chip_inactive" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_requests"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    </LinearLayout>
</LinearLayout>
