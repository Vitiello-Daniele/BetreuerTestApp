<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7FB">

    <!-- Header-Bar -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF9800"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meine Rechnungen"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Filterchips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <!-- Vollbreite: Alle (N) -->
        <TextView
            android:id="@+id/chip_filter_all"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Alle (0)"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:background="@drawable/bg_filter_chip_active" />

        <!-- Reihe mit 3 Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/chip_filter_open"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Offen (0)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/bg_filter_chip_inactive" />

            <TextView
                android:id="@+id/chip_filter_created"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Gestellt (0)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/bg_filter_chip_inactive" />

            <TextView
                android:id="@+id/chip_filter_paid"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Bezahlt (0)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/bg_filter_chip_inactive" />
        </LinearLayout>
    </LinearLayout>

    <!-- Liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_invoices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</LinearLayout>
