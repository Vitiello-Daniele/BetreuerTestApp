<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Titel -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neue Abschlussarbeit erstellen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Arbeitstitel -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titel der Arbeit *"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/title_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="z.B. Entwicklung einer Mobile App"
        android:inputType="textCapSentences"
        android:layout_marginBottom="16dp" />

    <!-- Studentenname -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name des Studenten *"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/student_name_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="z.B. Max Mustermann"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <!-- Beschreibung (optional) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beschreibung (optional)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:minHeight="120dp"
        android:gravity="top"
        android:hint="Kurze Beschreibung der Arbeit..."
        android:inputType="textMultiLine"
        android:layout_marginBottom="32dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Abbrechen"
            android:textSize="16sp"
            android:backgroundTint="#9E9E9E" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Speichern"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>

    <!-- Hinweis -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="* Pflichtfelder\nNeue Arbeiten werden immer mit Status 'In Abstimmung' erstellt."
        android:textSize="12sp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp" />

</LinearLayout>