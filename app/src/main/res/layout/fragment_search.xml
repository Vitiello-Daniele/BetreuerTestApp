<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Such-Eingabe -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Betreuer suchen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Name oder Stichwort eingeben..."
        android:layout_marginBottom="16dp" />

    <!-- Fachbereich Auswahl -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fachbereich"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/expertise_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp" />

    <!-- Such-Button -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:text="Suchen"
        android:textSize="16sp" />

    <!-- ✅ NEU: Info-Text unter dem Such-Button -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="#F3F4F6"
        android:text="IU Hochschule\nMobile Software Engineering II\nDLBCSEMSE02_D\nBetreuer-App\n\nGemeinsam entwickelt von: Ivan Paunovic und Danielle Vitiello"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- Hier kommt später die Ergebnis-Liste -->

</LinearLayout>