<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titel -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Betreuer suchen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Suchfeld -->
    <EditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Name oder Stichwort eingeben..."
        android:layout_marginBottom="16dp" />

    <!-- Fachbereich Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fachbereich"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Fachbereich-Spinner (aus Directory + 'Alle Bereiche') -->
    <Spinner
        android:id="@+id/expertise_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp" />

    <!-- Such-Button -->
    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:text="Suchen"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Ergebnisliste -->
    <ListView
        android:id="@+id/supervisor_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

</LinearLayout>
