<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Titel -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status aktualisieren"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Arbeitstitel -->
    <TextView
        android:id="@+id/thesis_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titel der Arbeit"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Studentenname -->
    <TextView
        android:id="@+id/student_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student: Name"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Aktueller Status -->
    <TextView
        android:id="@+id/current_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktueller Status: "
        android:textSize="16sp"
        android:background="#e3f2fd"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Neuer Status -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neuen Status auswählen:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/new_status_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp" />

    <!-- Update Button -->
    <Button
        android:id="@+id/update_status_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:text="Status aktualisieren"
        android:textSize="16sp"
        android:backgroundTint="#2196F3" />

    <!-- Status-Workflow Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status-Workflow: In Abstimmung → Angemeldet → Abgegeben → Kolloquium"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>