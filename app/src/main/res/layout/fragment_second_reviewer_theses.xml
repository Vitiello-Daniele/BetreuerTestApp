<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7FB">


    <!-- Filterchips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp">

        <!-- Vollbreite: Alle (N) -->
        <TextView
            android:id="@+id/chip_filter_all"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Alle (0)"
            android:textSize="12sp"
            android:textColor="#FF9800"
            android:background="@drawable/bg_filter_chip_active" />

        <!-- Reihe mit 3 Chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/chip_filter_pending"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ausstehend (0)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/bg_filter_chip_inactive" />

            <TextView
                android:id="@+id/chip_filter_active"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Aktiv (0)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/bg_filter_chip_inactive" />

            <TextView
                android:id="@+id/chip_filter_finished"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="Beendet (0)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:background="@drawable/bg_filter_chip_inactive" />
        </LinearLayout>
    </LinearLayout>

    <!-- Liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_theses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

</LinearLayout>
